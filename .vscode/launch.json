{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server-side",
      "program": "${workspaceFolder}/app/entry.server.tsx",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 1
      }
    },
    {
      "name": "Launch client-side",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "type": "node-terminal",
      "noDebug": false,
      "command": "npm run dev",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 2
      }
    },
    {
      "name": "Launch Edge",
      "type": "msedge",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "webRoot": "${workspaceFolder}",
      "url": "http://localhost:5173/",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "smartStep": true,
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug app",
      "configurations": [
        "Launch server-side",
        "Launch client-side",
        "Launch Edge"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
}
